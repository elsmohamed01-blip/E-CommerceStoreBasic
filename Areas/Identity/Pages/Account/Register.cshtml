
@page
@model RegisterModel
@{ ViewData["Title"] = "إنشاء حساب جديد"; }

<style>
    body {
        background: linear-gradient(135deg, #fdf5e6, #ffe4b5);
        font-family: 'Cairo', sans-serif;
    }

    .register-container {
        max-width: 450px;
        margin: 80px auto;
        background: #fff;
        padding: 40px;
        border-radius: 20px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
        text-align: right;
        direction: rtl;
    }

        .register-container h2 {
            text-align: center;
            color: #ff7f00;
            margin-bottom: 25px;
            font-weight: 700;
        }

    .form-group label {
        font-weight: 600;
        color: #444;
    }

    .form-control {
        border-radius: 12px;
        padding: 10px;
    }

    .btn-register {
        width: 100%;
        background-color: #ff7f00;
        color: #fff;
        border: none;
        padding: 12px;
        border-radius: 12px;
        font-size: 16px;
        transition: 0.3s;
    }

        .btn-register:hover {
            background-color: #e66e00;
            transform: scale(1.03);
        }

    .extra-links {
        text-align: center;
        margin-top: 15px;
    }

        .extra-links a {
            color: #ff7f00;
            text-decoration: none;
            font-weight: 600;
        }

            .extra-links a:hover {
                text-decoration: underline;
            }
</style>

<div class="register-container">
    <h2>إنشاء حساب جديد</h2>

    <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <div asp-validation-summary="All" class="text-danger mb-3"></div>

        <div class="form-group mb-3">
            <label asp-for="Input.Email">البريد الإلكتروني</label>
            <input asp-for="Input.Email" class="form-control" placeholder="example@email.com" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Input.Password">كلمة المرور</label>
            <input asp-for="Input.Password" class="form-control" placeholder="••••••••" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label asp-for="Input.ConfirmPassword">تأكيد كلمة المرور</label>
            <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="أعد كتابة كلمة المرور" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>

        <button type="submit" class="btn-register">إنشاء الحساب</button>

        <div class="extra-links">
            <p>هل لديك حساب بالفعل؟ <a asp-page="./Login">تسجيل الدخول</a></p>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

