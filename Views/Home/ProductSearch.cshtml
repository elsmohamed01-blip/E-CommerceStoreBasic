
@model List<Product>
<!-- قسم عرض المنتجات -->
<div class="container my-5">
    <div class="text-center mb-4">
        <h3 class="fw-bold">
            <span class="orange-text">المنتجات الخاصة</span> بالقسم
        </h3>
    </div>

    <div class="product-grid">
        @foreach (var item in Model)
        {
            <div class="product-card">
                <a href="/Home/ProductShow/@item.Id">
                    <img src="../@item.Image" alt="@item.Name" class="product-img" />
                </a>
                <h5 class="mt-3">@item.Name</h5>

                <p class="product-price ">@item.Price ج.م</p>

                <form asp-action="AddToCart" method="post" class="mt-auto">
                    <input type="hidden" name="Id" value="@item.Id" />
                    <label for="quantity">الكمية:</label>
                    <input type="number" id="quantity" name="Quantity" min="1" max="@item.Quantity" value="1" required class="qty-input" />
                    <button type="submit" class="cart-btn">
                        <i class="fas fa-shopping-cart"></i> أضف إلى السلة
                    </button>
                </form>
            </div>
        }
    </div>
</div>

<!-- تنسيقات CSS -->
<style>
    /* تنظيم شبكة المنتجات */
    .product-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
        gap: 25px;
        justify-content: center;
        align-items: start;
    }

    /* شكل الكارد */
    .product-card {
        background: #fff;
        border-radius: 15px;
        box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
        padding: 15px;
        text-align: center;
        display: flex;
        flex-direction: column;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        min-height: 400px;
    }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.15);
        }

    /* الصورة */
    .product-img {
        width: 100%;
        height: 220px;
        object-fit: cover;
        border-radius: 10px;
    }

    /* السعر */
    .product-price {
        font-size: 22px;
        color: #ff6600;
        font-weight: bold;
        margin-top: 10px;
    }

    /* زر السلة */
    .cart-btn {
        background-color: sandybrown;
        color: white;
        border: none;
        border-radius: 8px;
        padding: 10px;
        width: 100%;
        font-weight: bold;
        transition: background-color 0.3s ease;
    }

        .cart-btn:hover {
            background-color: #ff8c42;
        }

    /* حقل الكمية */
    .qty-input {
        width: 80px;
        margin: 8px 0;
        text-align: center;
        border: 1px solid #ccc;
        border-radius: 6px;
    }

    /* علشان المنتجات متدخلش في الفوتر */
    footer {
        margin-top: 60px;
        position: relative;
        z-index: 1;
    }
</style>












