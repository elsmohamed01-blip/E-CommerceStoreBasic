
@model List<Catoegry>

<div class="latest-news pt-150 pb-150">
    <div class="container">

        <div class="row">
            <div class="col-lg-8 offset-lg-2 text-center">
                <div class="section-title">
                    <h3><span class="orange-text">أقسام</span> الموقع</h3>
                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Aliquid, fuga quas itaque eveniet beatae optio.</p>
                </div>
            </div>
        </div>

        <div class="row" style="text-align:center;min-width:150px;min-height:150px">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6" style="text-align:center;min-width:150px;min-height:150px">
                    <div class="single-latest-news">
                        <a href="/home/Product/@item.Id"><img src=" @item.Image" style="max-height: 200px;min-height:200px" alt=""></a>
                        <div class="news-text-box">
                            <h3><a href="/home/Product/@item.Id">@item.Name</a></h3>

                            <p class="excerpt" style="text-align:center;min-width:150px;min-height:150px">@item.Description</p>
                            <a href="single-news.html" class="read-more-btn">read more <i class="fas fa-angle-right"></i></a>
                        </div>
                    </div>
                </div>

            }

        </div>

    </div>
</div>