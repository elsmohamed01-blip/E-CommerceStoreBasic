
@model List<Product>
<div class="more-products mb-150">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2 text-center">
                <div class="section-title"style="margin-bottom:3px">
                    <h3><span class="orange-text">المنتجات الخاصة ب</span>بالقسم</h3>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6 text-center">
                    <div class="single-product-item">
                        <div class="product-image">
                            <a href="/Home/ProductShow/@item.Id"><img src="../@item.Image" style="max-height: 200px;min-height:200px" alt=""></a>
                        </div>
                        <h3>@item.Name</h3>
                        <p class="product-price"><span>كمية المنتج : @item.Quantity</span> ج.م @item.Price </p>
                        <form asp-action="AddToCart" method="post">
                            <input type="hidden" name="Id" value="@item.Id" />
                            <label for="quantity">الكمية:</label>
                            <input type="number" id="quantity" name="Quantity" min="1" max="@item.Quantity" value="1" required />
                            <br />
                            <br />

                            <button type="submit" class="btn btn-outline-dark" style="width:250px;height:35px;background-color:sandybrown"><i class="fas fa-shopping-cart"></i> أضف إلى السلة</button>
                        </form>
                    </div>
                </div>
            }

        </div>
    </div>
</div>